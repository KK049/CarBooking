@page
@model CarBooking.Pages.QueryRecord.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h4>Query</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Query.Name" class="control-label"></label>
                <input asp-for="Query.Name" class="form-control" />
                <span asp-validation-for="Query.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Query.sEmail" class="control-label"></label>
                <input asp-for="Query.sEmail" class="form-control" />
                <span asp-validation-for="Query.sEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Query.Contact" class="control-label"></label>
                <input asp-for="Query.Contact" class="form-control" />
                <span asp-validation-for="Query.Contact" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Query.Message" class="control-label"></label>
                <input asp-for="Query.Message" class="form-control" />
                <span asp-validation-for="Query.Message" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
