@page
@model CarBooking.Pages.Booking.ProductModel
@{
}


<div class="container">
    <div class="row">

        @foreach (var item in Model.BookingCars)
        { 
        <div class="col-md-4">
            <h1 class="text-center">

                @Html.DisplayFor(modelItem => item.Name)
            </h1>
            <p>@Html.DisplayFor(modelItem => item.CarModel)</p>
            <hr />
            <p>@Html.DisplayFor(modelItem => item.BookingDate)</p>

            <a asp-page="./Details" class="btn btn-danger" asp-route-id="@item.id">Proceed </a>

        </div>
        }

        </div>

</div>

  